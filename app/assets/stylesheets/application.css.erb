html {
    height: 100%;
    color: #232E3D;
}

body {
    background-image: url(<%= asset_path 'clean_textile.png' %>);
    height: 100%;
    margin: 0px;
    padding: 0px;
}

#container {
    min-height: 100%;
    height: auto !important;
    height: 100%;
    font-family: 'Lucida Sans Unicode', 'Lucida Grande', sans-serif;    
    position: relative;
}

#container p {
    line-height:25px;
}

#content {
    position: relative;
    padding-bottom: 180px;
}


.header {
    height: 100px;
    width: 900px;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 40px;
    margin-top: 80px;
    background: url(<%= asset_path 'header.png' %>) center;
    background-repeat: no-repeat;
    background-size: 780px 200px;
    padding: 80px 30px 20px 30px;
}

.header a.active {
    color: #00FF00;
}

.header a {
    text-decoration: none;
    color: white;
}

.team {
    float: left;
    position: relative;
    left: 54px;
    bottom: 68px;
    height: 30px;
    width: 60px;
    background-repeat: no-repeat;
    padding: 20px 20px 20px 20px;
}

.donations {
    float: left;
    position: relative;
    left: 55px;
    bottom: 68px;
    height: 30px;
    width: 60px;
    background-repeat: no-repeat;
    padding: 20px 20px 20px 20px;
}

.about {
    float: left;
    position: relative;
    left: 378px;
    bottom: 68px;
    height: 30px;
    width: 100px;
    background-repeat: no-repeat;
    padding: 20px 20px 20px 20px;
}

.faq {
    float: left;
    position: relative;
    left: 425px;
    bottom: 68px;
    height: 30px;
    width: 60px;
    background-repeat: no-repeat;
    padding: 20px 20px 20px 20px;
}

.footer {
    width: 100%;
    height: 80px;
    position: absolute;
    bottom: 0px;
    background-color: #89B9C6;
    padding: 0px;
    margin-bottom: 0px;
}

.comments {
    width: 520px;
    height: 50px;
    position: absolute;
    right: 0px;
    color: white;
    cursor: pointer;
}

.comments span {
    font-family:cursive;
    color:white;
}

.slogan{
    width: 820px;
    height: 30px;
    margin-left: auto;
    margin-right: auto;
    font-size: 26px;
    margin-bottom: 35px;
}

.slogan span {
    color: #95BD17;
    font-weight: bold;
}

#comments {
    width: 280px;
    height: 210px;
    position: fixed;
    bottom: 100px;
    left: 800px;
    display: none;
    z-index: 999999;
}

#close_button {
    background: url(<%= asset_path "sign-up-exit.png" %>) no-repeat;
    display: block;
    height: 14px;
    width: 13px;
    float: right;
    margin-right: 20px;
    margin-top: 10px;
    text-decoration: none;
    cursor: pointer;
}